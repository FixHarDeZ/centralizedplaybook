[Unit]
Description=Redis persistent key-value database
After=network.target

[Service]
ExecStart=/usr/bin/redis-server /etc/redis-{{project_name}}-{{project_env}}.conf --supervised systemd
ExecStop=/usr/libexec/redis-shutdown redis-{{project_name}}-{{project_env}}
Type=notify
User=redis
Group=redis
RuntimeDirectory=redis-{{project_name}}-{{project_env}}
RuntimeDirectoryMode=0755

[Install]
WantedBy=multi-user.target
